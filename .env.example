# =============================================================================
#  GENERAL DJANGO SETTINGS
# =============================================================================
DEBUG=True
SECRET_KEY=your-secret-key-here

ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:4200
CORS_ALLOWED_ORIGINS=http://localhost:4200
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
#  FRONTEND LINKS
# =============================================================================
FRONTEND_URL=http://localhost:4200/login
FRONTEND_CONFIRM_URL=http://localhost:4200/confirm
RESET_PASSWORD_URL=http://localhost:4200/reset-password
URL=http://localhost:8000
APP_HOST=http://localhost:8000

# =============================================================================
#  EMAIL SETTINGS
# =============================================================================
# For development:
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=dev@example.com

# For production (uncomment & configure):
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-smtp-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# =============================================================================
#  DATABASE SETTINGS
# =============================================================================
# Local development → SQLite (auto)
# Production → PostgreSQL (fill in these values)

# DB_NAME=your-db-name
# DB_USER=your-db-user
# DB_PASSWORD=your-db-password
# DB_HOST=your-db-host
# DB_PORT=5432

# SSL (optional for RDS)
# DB_SSL_REQUIRE=True
# DB_SSL_ROOTCERT=/app/rds-combined-ca-bundle.pem

# =============================================================================
#  REDIS / RQ WORKER
# =============================================================================
# Local:
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_LOCATION=redis://localhost:6379/0

# Docker:
# REDIS_HOST=redis
# REDIS_LOCATION=redis://redis:6379/0

# Optional single URL for both cache & queues:
# REDIS_URL=redis://redis:6379/0

# =============================================================================
#  JWT COOKIE CONFIG (SimpleJWT)
# =============================================================================
JWT_ACCESS_COOKIE_NAME=vf_access
JWT_REFRESH_COOKIE_NAME=vf_refresh
JWT_COOKIE_SECURE=False          # True in production
JWT_COOKIE_SAMESITE=Lax          # "None" in production

# =============================================================================
#  AWS S3 STORAGE
# =============================================================================
USE_S3_MEDIA=False

# Production:
# USE_S3_MEDIA=True
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_STORAGE_BUCKET_NAME=your-bucket
# AWS_S3_REGION_NAME=eu-central-1
# AWS_S3_QUERYSTRING_AUTH=True

# =============================================================================
#  DJANGO SUPERUSER (Optional – auto-create)
# =============================================================================
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_PASSWORD=adminpassword
# DJANGO_SUPERUSER_EMAIL=admin@example.com
